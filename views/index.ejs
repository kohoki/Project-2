<p>Welcome</p>

<% if (!allProducts) { %>
    <h2>No Products Yet</h2>
<% } else { %>
    <% allProducts.forEach(product=> { %>
        <div class="product-item">
            <h3>
                <%= product.name %> - <%= product.date %>
            </h3>
            <ul>
                <% product.description.forEach(elem=> { %>
                    <li>
                        <%= elem %>
                    </li>
                <% }) %>
            </ul>
            <!-- <button>Add to the shopping Cart</button> -->
            <a href="/add-to-cart/<%= product.id %>">Add to the Shoppping Cart</a>
        </div>
    <% }) %>
<% } %>